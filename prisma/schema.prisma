generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  auth0Id   String   @unique
  email     String   @unique
  name      String?
  role      String   @default("SELLER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  tours              Tour[]
  sellerAssignments  SellerAssignment[]
  sentInvitations    Invitation[]       @relation("SentInvitations")

  @@index([auth0Id])
  @@index([email])
}

model Tour {
  id        String   @id @default(cuid())
  name      String
  startDate DateTime?
  endDate   DateTime?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  managerId String
  manager   User     @relation(fields: [managerId], references: [id])
  
  shows     Show[]
  merchItems MerchItem[]

  @@index([managerId])
  @@index([isActive])
  @@index([managerId, isActive])
  @@index([updatedAt])
}

model Show {
  id        String   @id @default(cuid())
  name      String   // e.g. "London - O2 Arena"
  date      DateTime
  venue     String?
  
  ticketsSold Int?
  totalTickets Int?
  
  cost      Float?
  currency  String   @default("USD")
  
  tourId    String
  tour      Tour     @relation(fields: [tourId], references: [id], onDelete: Cascade)
  
  inventoryRecords   InventoryRecord[]
  sellerAssignments  SellerAssignment[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tourId])
  @@index([date])
  @@index([tourId, date])
}

enum Category {
  APPAREL
  ACCESSORIES
  MEDIA
}

model MerchItem {
  id        String   @id @default(cuid())
  name      String
  description String?
  imageUrl  String?  // Vercel Blob URL
  category  Category @default(APPAREL)
  
  tourId    String
  tour      Tour     @relation(fields: [tourId], references: [id], onDelete: Cascade)
  
  variants  MerchVariant[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tourId])
}

model MerchVariant {
  id        String   @id @default(cuid())
  size      String   // e.g. "M", "L", "One Size"
  type      String?  // e.g. "Mens", "Womens"
  price     Float
  quantity  Int      @default(0)  // Available quantity
  
  merchItemId String
  merchItem   MerchItem @relation(fields: [merchItemId], references: [id], onDelete: Cascade)
  
  inventoryRecords InventoryRecord[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([merchItemId])
  @@index([quantity])
}

model InventoryRecord {
  id        String   @id @default(cuid())
  
  startCount Int     @default(0)
  addedCount Int     @default(0)
  endCount   Int?    // Null until counted
  shrinkage  Int     @default(0) // Damage/Theft
  
  soldCount  Int?    // Calculated: start + added - end - shrinkage
  
  showId    String
  show      Show     @relation(fields: [showId], references: [id], onDelete: Cascade)
  
  variantId String
  variant   MerchVariant @relation(fields: [variantId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([showId, variantId])
  @@index([showId])
  @@index([variantId])
  @@index([updatedAt])
}

model SellerAssignment {
  id        String   @id @default(cuid())
  
  sellerId  String
  seller    User     @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  
  showId    String
  show      Show     @relation(fields: [showId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@unique([sellerId, showId])
  @@index([sellerId])
  @@index([showId])
}

model Invitation {
  id        String   @id @default(cuid())
  email     String
  role      String   @default("SELLER")
  status    String   @default("PENDING") // PENDING, ACCEPTED, EXPIRED
  token     String   @unique
  
  managerId String
  manager   User     @relation("SentInvitations", fields: [managerId], references: [id], onDelete: Cascade)
  
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@index([email])
  @@index([token])
  @@index([managerId])
}
